<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/rithmiologo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_weight="3"
        android:gravity="center"
        android:src="@drawable/rithmio_logo_small" />

    <Button
        android:id="@+id/demo_collection_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_weight="3"
        android:text="@string/demo_collection" />

    <Button
        android:id="@+id/demo_external_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_weight="4"
        android:text="Start Data Stream Activity" />

</LinearLayout>