<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/supervision_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/learnSupervised"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:onClick="learnSupervised"
        android:text="@string/toSuper" />

    <Button
        android:id="@+id/learnUnsupervised"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:onClick="learnUnsupervised"
        android:text="@string/toUnsuper" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5" >

        <ImageView
            android:id="@+id/imageView_RithmioLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:onClick="logoClick"
            android:src="@drawable/logo_colorfixed" />

        <Button
            android:id="@+id/backToMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:onClick="backToMenu"
            android:text="@string/toMenu" />
    </RelativeLayout>

</LinearLayout>